<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <ImageView
            android:id="@+id/iv_product_preview"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:src="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/tv_coup_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@color/colorAccent"
            android:padding="5dp"
            android:text="券:￥3"
            android:textColor="@android:color/white"
            android:textSize="14sp" />


    </RelativeLayout>

    <TextView

        android:id="@+id/tv_product_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/ic_allow_right"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:text="笔袋金牌卖家出品"
        android:textColor="@color/colorAccent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="券后 ：" />

        <TextView
            android:id="@+id/tv_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/text"
            android:layout_toRightOf="@+id/text"
            android:text="￥ 2000000"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/tv_number_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/text2"
            android:layout_toStartOf="@+id/text2"
            android:text="2000"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="人已买"
            android:textColor="@color/colorPrimaryDark" />
    </RelativeLayout>

</LinearLayout>