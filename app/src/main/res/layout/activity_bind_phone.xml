<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/base_common_toobar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <EditText
            android:id="@+id/bind_phone_edt_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/corner0_white_bg_storke_gray"
            android:hint="请输入绑定手机号"
            android:inputType="phone"
            android:maxLength="11"
            android:maxLines="1"
            android:padding="5dp"
            android:textColor="@color/background_dark"
            android:textColorHint="@color/colorPrimary"
            android:textSize="18sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/bind_phone_edt_vcode"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:background="@drawable/corner0_white_bg_storke_gray"
                android:hint="请输入验证码"
                android:inputType="phone"
                android:maxLines="1"
                android:padding="5dp"
                android:textColor="@color/background_dark"
                android:textColorHint="@color/colorPrimary"
                android:textSize="18sp" />

            <Button
                android:id="@+id/bind_phone_btn_get_vcode"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/button_seletor"
                android:text="获取验证码"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </RelativeLayout>


        <Button
            android:id="@+id/bind_phone_btn_bind_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/colorAccent"
            android:padding="5dp"
            android:text="绑定手机号"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>