<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/app_launch">

    <LinearLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:background="@color/app_main_bg"
        android:layout_height="48dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="返利工具"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_bar"
        android:padding="10dp">

        <TextView

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|start"
            android:text="淘宝返利"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/introduce_fanli"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="end|center_vertical"
            android:text="怎么返"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/view_common_searchbox_bg"
        android:orientation="horizontal">


        <ImageView

            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_toolbar_search" />

        <EditText
            android:id="@+id/al_search_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/text_item_bg"
            android:gravity="center_vertical"
            android:hint="宝贝名称:(如笔袋)"
            android:padding="10dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/al_search"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@color/yellow"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="搜淘宝"
            android:textColor="@color/colorAccent"
            android:textSize="16sp" />

    </LinearLayout>
</RelativeLayout>