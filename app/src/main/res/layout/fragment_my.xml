                android:layout_height="1dp"
                android:background="@color/app_main_bg" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/lighter_gray" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
